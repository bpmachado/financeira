{
    "Application": {
        "Name": "financeira"
    },

    "ConnectionStrings": {
        "DefaultConnection": "Host=postgres;Port=5432;Database=financeiradb;Username=postgres;Password=postgres"
    },

    "Database": {
        "Provider": "PostgreSQL",
        "Driver": "Npgsql"
    },

    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Root": "Information"
        },
        "Console": {
            "FormatterName": "simple",
            "TimestampFormat": "dd-MM-yyyy HH:mm:ss"
        },
        "File": {
            "Path": "app.log"
        }
    },

    "Management": {
        "Port": 9090,
        "Endpoints": {
            "Web": {
                "Exposure": {
                    "Include": "*"
                }
            }
        }
    }
}
