{
  "openapi": "3.0.1",
  "info": {
    "title": "Financeira API",
    "description": "API para gerenciamento de contratos financeiros",
    "version": "v1"
  },
  "paths": {
    "/api/v1/contratos": {
      "post": {
        "tags": [
          "Contratos"
        ],
        "summary": "Salvar",
        "description": "Cadastrar novo contrato",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ContratoDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ContratoDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ContratoDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cadastro com sucesso."
          },
          "422": {
            "description": "Erro de validação."
          },
          "409": {
            "description": "Contrato já cadastrado."
          }
        }
      },
      "get": {
        "tags": [
          "Contratos"
        ],
        "summary": "Obter contrato por CPF ou CNPJ",
        "description": "Retorna os dados do contrato por CPF ou CNPJ",
        "parameters": [
          {
            "name": "cpfCnpj",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "size",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Contrato encontrado com sucesso.",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ContratoDTO"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ContratoDTO"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ContratoDTO"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Contrato não encontrado."
          }
        }
      }
    },
    "/api/v1/contratos/{id}": {
      "get": {
        "tags": [
          "Contratos"
        ],
        "summary": "Obter contrato por id",
        "description": "Retorna os dados do contrato por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Contrato encontrado com sucesso.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ContratoDTO"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContratoDTO"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContratoDTO"
                }
              }
            }
          },
          "404": {
            "description": "Contrato não encontrado."
          }
        }
      },
      "delete": {
        "tags": [
          "Contratos"
        ],
        "summary": "Deletar",
        "description": "Deletar os dados do contrato",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Contrato deletado com sucesso."
          },
          "404": {
            "description": "Contrato não encontrado."
          },
          "400": {
            "description": "Contrato possui pagamento cadastrado."
          }
        }
      }
    },
    "/api/v1/contratos/{id}/pagamentos": {
      "post": {
        "tags": [
          "Pagamentos"
        ],
        "summary": "Salvar",
        "description": "Cadastrar novo pagamento para um contrato",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PagamentoDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PagamentoDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PagamentoDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cadastro com sucesso."
          },
          "422": {
            "description": "Erro de validação."
          },
          "409": {
            "description": "Pagamento já cadastrado."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CondicaoVeiculo": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "ContratoDTO": {
        "required": [
          "clienteCpfCnpj",
          "condicaoVeiculo",
          "dataVencimentoPrimeiraParcela",
          "prazoMeses",
          "taxaMensal",
          "tipoVeiculo",
          "valorTotal"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "clienteCpfCnpj": {
            "minLength": 1,
            "type": "string"
          },
          "valorTotal": {
            "maximum": 999999999999,99,
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          },
          "taxaMensal": {
            "maximum": 100,
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          },
          "prazoMeses": {
            "maximum": 360,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "dataVencimentoPrimeiraParcela": {
            "type": "string",
            "format": "date"
          },
          "tipoVeiculo": {
            "$ref": "#/components/schemas/TipoVeiculo"
          },
          "condicaoVeiculo": {
            "$ref": "#/components/schemas/CondicaoVeiculo"
          }
        },
        "additionalProperties": false
      },
      "PagamentoDTO": {
        "required": [
          "dataPagamento",
          "valorPago"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID do pagamento",
            "format": "uuid"
          },
          "dataPagamento": {
            "type": "string",
            "description": "Data do pagamento",
            "format": "date"
          },
          "valorPago": {
            "minimum": 0,01,
            "type": "number",
            "description": "Valor pago",
            "format": "double"
          }
        },
        "additionalProperties": false,
        "description": "Pagamento"
      },
      "TipoVeiculo": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      }
    }
  }
}